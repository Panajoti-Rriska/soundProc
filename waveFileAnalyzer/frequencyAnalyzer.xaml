<UserControl x:Class="NAudioWpfDemo.frequencyAnalyzer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" 
        Height="500" Width="800" Background="Wheat">

    <d3:ChartPlotter x:Name="frequencyChart" Margin="10,10,20,10">
        <d3:ChartPlotter.HorizontalAxis>
            <d3:HorizontalDateTimeAxis Name="dateAxis"/>
        </d3:ChartPlotter.HorizontalAxis>
        <d3:ChartPlotter.VerticalAxis>
            <d3:VerticalIntegerAxis Name="countAxis"/>
        </d3:ChartPlotter.VerticalAxis>


        <d3:Header FontFamily="Arial" Content="Frequency Analysis"/>
        <d3:VerticalAxisTitle x:Name="yAxis" FontFamily="Arial" Content="dB"/>
        <d3:HorizontalAxisTitle x:Name="xAxis" FontFamily="Arial" Content="Hz"/>
    </d3:ChartPlotter>

</UserControl>
