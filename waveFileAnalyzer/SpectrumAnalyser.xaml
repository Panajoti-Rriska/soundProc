<UserControl x:Class="NAudioWpfDemo.SpectrumAnalyser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Canvas Background="#FFCBCBCB" RenderTransformOrigin="0.509,0.515" Height="204" Width="611">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.02"/>
                <TranslateTransform X="0.07" Y="-0.076"/>
            </TransformGroup>
        </Canvas.RenderTransform>
        <Polyline x:Name="polyline1" Stroke="#FF000CFF" StrokeThickness="1"/>
    </Canvas>
</UserControl>
